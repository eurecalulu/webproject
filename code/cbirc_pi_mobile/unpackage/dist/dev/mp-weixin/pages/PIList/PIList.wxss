.PIList-container {
  padding: 20px;
  font-size: 14px;
  line-height: 24px;
  height: 100%;
  box-sizing: border-box;
}
.PIList-container .PI-filter {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.PIList-container .PI-filter-input {
  margin-bottom: 20px;
  width: 80%;
}
.PIList-container .PI-filter-btn-box {
  display: flex;
  width: 80%;
  justify-content: space-around;
}
.PIList-container .PI-filter-btn-box .PI-filter-btn {
  width: 40%;
}
.PIList-container .PI-filter-control {
  margin: 10px 0;
}
.PIList-container .PI-filter-control-item {
  font-size: 14px;
  display: flex;
  justify-content: center;
}
.PIList-container .PI-card {
  border-bottom: 1px solid #ddd;
  padding: 5px;
}
.PIList-container .PI-card .PI-card-header {
  display: flex;
  justify-content: space-between;
}
.PIList-container .PI-card .PI-card-header .PI-card-user {
  font-size: 18px;
  font-weight: 700;
}
.PIList-container .PI-card .PI-card-header .PI-card-time {
  color: #888888;
}
.PIList-container .PI-card .PI-card-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.PIList-container .PI-card .PI-card-footer {
  text-align: right;
  overflow: hidden;
}
.PIList-container .PI-card .PI-card-footer .PI-card-footer-btn {
  width: 30%;
  float: right;
}
.PIList-container .info-box {
  margin: 20px 0;
  font-size: 18px;
  text-align: center;
}
.PIList-container .fixed-box {
  pointer-events: none;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100000;
}
.PIList-container .fixed-box .fixed-box-btn {
  pointer-events: auto;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  border: 1px solid #ddd;
  font-size: 12px;
  overflow: hidden;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  left: 85vw;
  top: 90vh;
  background-color: #ffffff;
}

